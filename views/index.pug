extends layout 
block contenido

    panel.crear.proyect 
        a(href="/autos") ir a autos

    form.agregar(action="/api/v1/newauto" method="POST")
            .campo 
                label(for="placa") Matricula: 
                input(type="text" id="placa" name="placa" placeholder="Digite su matricula")
            .campo 
                label(for="modelo") Modelo: 
                input(type="text" id="modelo" name="modelo" placeholder="Digite el modelo")
            .campo 
                label(for="marca") Marca: 
                input(type="text" id="marca" name="marca" placeholder="Digite la marca del auto")   
            .campo.enviar 
                input(type="submit" value="Guardar" class="boton")           
